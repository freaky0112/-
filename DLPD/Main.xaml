<Window x:Class="DLPD.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DLPD"
        mc:Ignorable="d"
        Title="Main" Height="300" Width="300">
    <Grid>
        <DataGrid x:Name="dtGrid" Margin="10,68,10,30" RenderTransformOrigin="-3.65,-3.732" Visibility="Visible" ClipboardCopyMode="IncludeHeader">        </DataGrid>
        <Grid HorizontalAlignment="Left" Height="53" Margin="10,10,0,0" VerticalAlignment="Top" Width="272">
            <Button x:Name="btnimport"  Content="底图数据导入" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="10,10,0,0" VerticalAlignment="Top" Width="Auto" Click="btnimport_Click"/>
            <Button x:Name="btnCalculate" Content="理论最高值计算" HorizontalAlignment="Left" Margin="91,10,0,0" VerticalAlignment="Top" Width="Auto" Click="btnCalculate_Click" />

        </Grid>
        <Label x:Name="lblProgess" Content="" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Center" Width="Auto"/>
        <ProgressBar x:Name="pgbCalculate" Height="10" Margin="10,0,10,10" VerticalAlignment="Bottom" Width="Auto"  />

    </Grid>
</Window>
